<%= render 'nav' %>

<article class="channel">
<header>
<h1>!<%= @channel.name %></h1>
<div class="actions">
<h5><%= link_to 'Edit', edit_organization_channel_path(@organization, @channel) %></h5>
<h5><%= link_to 'Delete', [@organization, @channel], data: { confirm: 'Are you sure you want to delete this channel?' }, method: :delete %></h5>
</div>
</header>

<section class="channel_post-ripple">
<%= render 'ripples/form', ripple: @new_ripple %>
</section>

<section class="nested">
<div class="ripples">
<%= render @ripples %>
</div>
</section>

</article>
